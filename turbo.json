{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "test": {},
    "build:api": {
      "dependsOn": ["api#build"],
      "outputs": ["dist/**"]
    },
    "build:web": {
      "dependsOn": ["web#build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "build": {
      "dependsOn": ["^build"]
    },
    "start:dev": {
      "dependsOn": ["api#infra"],
      "cache": false
    },
    "start:web": {
      "dependsOn": ["web#start:dev"],
      "cache": false
    },
    "start:api": {
      "dependsOn": ["api#start:dev"],
      "cache": false
    },
    "infra": {
      "cache": false
    }
  }
}